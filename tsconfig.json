{
    "compilerOptions": {
	"target": "ES2015",
	"module": "nodenext",
	"lib": ["es5", "es6", "dom", "esnext"],
	"allowJs": true,
	"skipLibCheck": true,
	"outDir": "dist",
	"rootDir": "./src",
	"forceConsistentCasingInFileNames": true,
	"esModuleInterop": true,
	"experimentalDecorators": true,
	"emitDecoratorMetadata": true,
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*"],
    "skipLibCheck": true
}
